<MainScreen>:
    countButton: countButton
    name: 'main'
    FloatLayout:
        size_hint: None, None

    Button:
        id: myButton
        text: "OFF" if myButton.state == "normal" else "ON"
        size_hint:0.3, 0.3
        pos_hint: {"y":0.1, "x":0.4}

    Button:
        id: countButton
        size_hint:0.2, 0.2
        pos_hint: {"y":0.1, "x":0.2}
        on_press: root.updateCounter()
        text: "0"

    Button:
        id: motorButton
        size_hint: 0.2, 0.2
        pos_hint: {"y":0.3, "x":0.2}
        text:"motor"

    Label:
        id: motorLabel
        color: 0.3, 0.4, 0.6, 1
        background_color: 0.7412, 0.0392, 0.3216, 0.3
        size_hint:0.2, 0.2
        pos_hint:{"y":0.5, "x":0.2}
        font_size: '20sp'
        text: "Motor OFF" if motorButton.state == "normal" else "Motor ON"

    Slider:
        size_hint: 0.2, 0.2
        pos_hint:{"y":0.1, "x":0.65}
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'vertical'

    Label:
        id: sliderLabel
        pos_hint: {"y":-0.18, "x":0.25}
        text: str(slider.value)
        color: 0.3, 0.4, 0.6, 1

    ImageButton:
        pos_hint: {"y":0.4, "x":0.45}
        on_release: app.root.current = 'other'
        text: "Next Screen"

    ImageButton:
        id: animatedImageButton
        size: (200, 200)
        pos_hint: {"x":0.2, "y": 0.7}
        on_press: root.image_transition_anim()


